<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phonenumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.id %></td>
        <td><%= restaurant.Name %></td>
        <td><%= restaurant.Address %></td>
        <td><%= restaurant.Phonenumber %></td>
        
        <td class="indexListButton"><%= link_to 'Show', user_restaurant_path(@restaurant) %>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_user_restaurant_path %>
