<p id="notice"><%= notice %></p>

<h1>List of Restaurants</h1>

<table style="width: 100%;" BORDER =2 align=center>
  <thead>
    <tr BGCOLOR=GREY>
      <th>Name</th>
      <th>Address</th>
      <th>Phonenumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr align=center>
        <td><%= restaurant.id %></td>
        <td><%= restaurant.Name %></td>
        <td><%= restaurant.Address %></td>
        <td><%= restaurant.Phonenumber %></td>
        
        <td class="indexListButton"><%= link_to 'Show', user_restaurant_path(current_user.id, restaurant.id) %>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


